<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="20dp"
    tools:context=".Employers.PostJob">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- PAGE TITLE -->
        <TextView
            android:id="@+id/tv_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post a Job"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#0A57BF"
            android:layout_marginBottom="20dp" />

        <!-- ============================= -->
        <!-- COMPANY INFORMATION CARD -->
        <!-- ============================= -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Information"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            android:paddingTop="5dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="14dp"
            card_view:cardElevation="6dp"
            android:layout_marginBottom="20dp"
            android:padding="16dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Company Name -->
                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company Name"
                    android:textSize="15sp"
                    android:padding="12dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/info_item_bg"
                    android:textColor="#444" />

                <TextView
                    android:id="@+id/txv_industry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Industry"
                    android:textSize="15sp"
                    android:padding="12dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/info_item_bg"
                    android:textColor="#444" />

                <TextView
                    android:id="@+id/txv_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Website"
                    android:textSize="15sp"
                    android:padding="12dp"
                    android:background="@drawable/info_item_bg"
                    android:textColor="#444" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- SECTION TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Details"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111"
            android:layout_marginBottom="12dp" />

        <!-- Inputs -->
        <EditText
            android:id="@+id/et_job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:hint="Job Title"
            android:padding="14dp"
            android:textColor="#000"
            android:textColorHint="#777" />

        <EditText
            android:id="@+id/et_job_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:hint="Job Category"
            android:padding="14dp"
            android:textColor="#000"
            android:textColorHint="#777"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_employer_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:hint="Employment Type"
            android:padding="14dp"
            android:textColor="#000"
            android:textColorHint="#777"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_entry_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:hint="Job Entry Level"
            android:padding="14dp"
            android:textColor="#000"
            android:textColorHint="#777"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_salary_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:hint="Salary Range"
            android:padding="14dp"
            android:textColor="#000"
            android:textColorHint="#777"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_job_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:hint="Job Location"
            android:padding="14dp"
            android:textColor="#000"
            android:textColorHint="#777"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:hint="Application Deadline"
            android:padding="14dp"
            android:drawableStart="@drawable/calendar_ic"
            android:drawablePadding="12dp"
            android:focusable="false"
            android:textColor="#000"
            android:textColorHint="#777"
            android:layout_marginTop="12dp" />


        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/input_bg"
            android:hint="Job Description"
            android:padding="14dp"
            android:gravity="top"
            android:textColor="#000"
            android:textColorHint="#777"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_responsibilities"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/input_bg"
            android:hint="Responsibilities"
            android:padding="14dp"
            android:gravity="top"
            android:textColor="#000"
            android:textColorHint="#777"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/et_qualifications"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/input_bg"
            android:hint="Qualifications"
            android:padding="14dp"
            android:gravity="top"
            android:textColor="#000"
            android:textColorHint="#777"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Details"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="12dp" />

        <!-- PAYMENT CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="14dp"
            card_view:cardElevation="6dp"
            android:padding="18dp"
            android:layout_marginBottom="22dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <!-- PAYMENT AMOUNT -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Posting Fee: KES 3,500"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#0A57BF"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <!-- PAYMENT INSTRUCTIONS -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pay via MPESA Till Number 222454.\nAfter payment, enter the MPESA confirmation code below."
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:layout_marginBottom="16dp" />

                <!-- PAYMENT CODE INPUT -->
                <EditText
                    android:id="@+id/et_payment_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:inputType="textCapCharacters"
                    android:hint="Enter MPESA Confirmation Code"
                    android:padding="14dp"
                    android:textColor="#000"
                    android:textColorHint="#777"
                    android:maxLines="1"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"/>

        <!-- SUBMIT BUTTON -->
        <Button
            android:id="@+id/btn_submit_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Job"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="bold"
            android:backgroundTint="#0A57BF"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:padding="16dp" />

    </LinearLayout>

</ScrollView>
