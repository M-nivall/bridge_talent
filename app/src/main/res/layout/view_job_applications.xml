<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:elevation="8dp"
        card_view:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txv_applicant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: Ann Nzau"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txv_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salary: 54,000"
                android:textColor="@color/green_900"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/txv_jobType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employment Type: Full Time"
                android:textColor="#444444"
                android:textSize="15sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/txv_datePosted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Posted: 12/10/2025"
                android:textColor="#444444"
                android:textSize="15sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/txv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Pending Approval"
                android:textColor="@color/orange_700"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />

            <!-- View Details Button -->
            <Button
                android:id="@+id/btn_job_details"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="More Details"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_gravity="end"
                android:layout_marginTop="12dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
